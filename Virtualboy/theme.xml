<theme>
	<formatVersion>4</formatVersion>
<!-- System Details and Background -->
	<view name="system">
		<image name="background" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<zIndex>0</zIndex>
			<color>000000</color>
		</image>
		<helpsystem name="help">
			<textColor>CD2626</textColor>
			<iconColor>00000000</iconColor>
			<pos>1 1</pos>
		</helpsystem>
		<image name="logo">
			<path>./art/${system.theme}.png</path>
		</image>
		<text name="logoText">
            <color>CD2626</color>
            <forceUppercase>false</forceUppercase>
        </text>  
	</view>
<!-- System Details End -->
<!-- Menu Details  Begin -->
	<view name="menu">
	<menuBackground name="menubg">
		<color>CD2626</color>
	</menuBackground>
	<menuText name="menutext, menutitle, menufooter, menutextsmall">
			<selectorColor>CD2626</selectorColor>
			<color>000000</color>
			</menuText>
	</view>
<!-- Menu Details End-->
<!-- Basic View Options Begin -->
	<view name="basic">
		<text name="description" extra="false">
			<pos>0.061 0.624</pos>
			<size>0.236 0.200</size>
			<color>ffffff</color>
			<fontSize>0.025</fontSize>
			<text>No Information Available</text>
			<fontPath>./assets/noto.ttf</fontPath>
		</text>	
		<image name="none" extra="false">
			<origin>0.5 0.5</origin>
			<pos>0.1785 0.382</pos>
			<maxSize>0.236 0.418</maxSize>
			<path>./assets/no_boxart.png</path>
		</image> 
		<image name="layout" extra="true">
			<path>./assets/gamelist_basic.png</path>
			<pos>0 0</pos>
			<zIndex>2</zIndex>
			<size>1 1</size>
			<origin>0 0</origin>
		</image>
		<text name="system_name" extra="true">
			<text>${system.fullName}</text>
			<forceUppercase>0</forceUppercase>
			<size>0.5 0.025</size>
			<pos>0.02 0.025</pos>
			<color>CD2626</color>
			<fontPath>./assets/SST.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<zIndex>2</zIndex>
		</text>
		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate">
			<pos>1 1</pos>
		</text>
		<rating name="md_rating">
			<pos>1 1</pos>
			<size>0 0</size>
		</rating>
		<textlist name="gamelist">
			<selectorColor>CD2626</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>CD2626</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<fontPath>./assets/SST.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<pos>0.11 0.165</pos>
			<size>0.765 0.765</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<origin>0 0</origin>
			<lineSpacing>1.2</lineSpacing>
			<selectorImagePath>./assets/box.png</selectorImagePath>
			<selectorHeight>0.05</selectorHeight>
			<selectorOffsetY>0.01</selectorOffsetY>
		</textlist> 
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.1785 0.382</pos>
			<maxSize>0.236 0.418</maxSize>
		</image> 
		<text name="md_description">
			<pos>0.061 0.624</pos>
			<size>0.236 0.200</size>
			<color>CD2626</color>
			<fontSize>0.025</fontSize>
			<fontPath>./assets/noto.ttf</fontPath>
		</text>
		<image name="logo">
			<pos>1 1</pos>
			<color>CD2626</color>
			<path>./assets/box.png</path>
		</image>	
	</view>
<!-- Basic View Options End -->
<!-- Detailed View Options Begin -->
		<view name="detailed, video">
		<image name="background" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./assets/gamelist_detail.png</path>
			<zIndex>0</zIndex>
			<color>10667f</color>
		</image>
		<image name="layout" extra="true">
			<path>./assets/gamelist_detail.png</path>
			<pos>0 0</pos>
			<zIndex>2</zIndex>
			<size>1 1</size>
			<origin>0 0</origin>
		</image>
		<text name="system_name" extra="true">
			<text>${system.fullName}</text>
			<forceUppercase>0</forceUppercase>
			<size>0.5 0.025</size>
			<pos>0.02 0.025</pos>
			<color>CD2626</color>
			<fontPath>./assets/SST.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<zIndex>2</zIndex>
		</text>
		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate">
			<pos>1 1</pos>
		</text>
		<rating name="md_rating">
			<pos>1 1</pos>
			<size>0 0</size>
		</rating>
		<textlist name="gamelist">
			<selectorColor>CD2626</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>CD2626</primaryColor>
			<secondaryColor>CD2626</secondaryColor>
			<fontPath>./assets/SST.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<pos>0.43 0.165</pos>
			<size>0.53 0.765</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<origin>0 0</origin>
			<lineSpacing>1.2</lineSpacing>
			<selectorImagePath>./assets/box.png</selectorImagePath>
			<selectorHeight>0.05</selectorHeight>
			<selectorOffsetY>0.01</selectorOffsetY>
		</textlist> 
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.2085 0.370</pos>
			<maxSize>0.296 0.478</maxSize>
            <zIndex>3</zIndex>
		</image> 
		<text name="md_description">
			<pos>0.065 0.675</pos>
			<size>0.300 0.275</size>
			<color>CD2626</color>
			<fontSize>0.030</fontSize>
			<fontPath>./assets/noto.ttf</fontPath>
		</text>
		<image name="logo">
			<pos>1 1</pos>
			<color>CD2626</color>
			<path>./assets/box.png</path>
		</image>
		<video name="md_video">
            <pos>0.2085 0.370</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.296 0.478</maxSize>
            <zIndex>4</zIndex>
            <delay>false</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>false</showSnapshotDelay>
        </video>
	</view>
<!-- Detailed View Options End-->
<!-- Carousel View Options Begin -->
	<feature supported="carousel">
	  <view name="system">
		<carousel name="systemcarousel">
		    <type>horizontal</type>
		    <color>00000000</color>
			<size>1 1</size>
			<pos>0 0</pos>
			<maxLogoCount>1</maxLogoCount>
		    <logoScale>1</logoScale>
		    <logoSize>0.75 1</logoSize>
         </carousel>
		<text name="systemInfo">
		    <backgroundColor>00000000</backgroundColor>
		    <color>CD2626</color>
		    <fontPath>./assets/SST.ttf</fontPath>
			<pos>0 0.8</pos>
		    <fontSize>0.04</fontSize>     
		</text>
	</view>
<!-- Carousel View Options End -->
<!-- Grid View Options Begin -->	
	<view name="grid">
		<text name="system_name" extra="true">
			<text>${system.fullName}</text>
			<forceUppercase>0</forceUppercase>
			<size>0.5 0.025</size>
			<pos>0.02 0.025</pos>
			<color>CD2626</color>
			<fontPath>./assets/SST.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<zIndex>50</zIndex>
		</text>
		<imagegrid name="gamegrid">
   			<autoLayout>1 1</autoLayout>
     		<autoLayoutSelectedZoom>1.03</autoLayoutSelectedZoom>
      		<margin>0 0</margin>
			<padding>0 0</padding>
      		<zIndex>-5</zIndex>
			<color>CD2626</color>
    	</imagegrid>
        <text name="md_name">
        	<pos>0.125 0.9</pos>
			<origin>0 0</origin>
            <size>0.75 0.025</size>
			<zIndex>50</zIndex>
            <color>CD2626</color>
			<fontPath>./assets/SST.ttf</fontPath>
			<fontSize>0.04</fontSize>
        </text>
		<video name="md_video">
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>1 1.2</maxSize>
			<zIndex>10</zIndex>
			<color>10667f</color>
		</video>
		<image name="md_image">
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.75 0.75</maxSize>
			<zIndex>40</zIndex>
		</image>
	</view>
<!-- Grid View Options End -->
	</feature>
</theme>
